#!/usr/bin/env python

import zmq
import json
import sys

if len(sys.argv) < 2:
    binding = "tcp://localhost:5555"
else:
    binding = sys.argv[1]
    
if len(sys.argv) < 3:
    publish = "tcp://localhost:5556"
else:
    publish = sys.argv[1]
    
def handle(msg):
    print msg

ctxt = zmq.Context()
skt = ctxt.socket(zmq.SUB)
skt.connect(binding)
skt.setsockopt(zmq.SUBSCRIBE, "")

while True:
    try:
        msg = skt.recv()
        handle(msg)
    except Exception, e:
        sys.stderr.write("Exception: %s\n" % str(e))


